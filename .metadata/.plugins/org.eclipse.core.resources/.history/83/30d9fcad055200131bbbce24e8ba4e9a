import java.io.IOException;
import java.util.Random;


public class WriteAStory
{

	/**
	 * @param args
	 */
	public static void main(String[] args)
	{

		String[] KnightShinies =
			{
				"Knight",
				"Barnabas",
				"Zion",
				"Peppyr",
				"Matylda",
				"Wayde",
				"Atazhdiram",
				"Lucian",
				"Marye",
				"Ximena",
				"Bucephalus",
				"Mikaya",
				"Vela",
				"Galilei",
				"Zack",
				"Harleen",
				"Grukai",
				"Ceirai",
				"Demai",
				"Nessai",
				"Cain",
				"Philadelphia",
				"Courage",
				"Zephyr",
				"Bittersweet",
				"Kay",
				"Obsidian",
				"Zacari",
				"Gabriel",
				"Kristen",
				"Sarai",
				"Jalarka",
