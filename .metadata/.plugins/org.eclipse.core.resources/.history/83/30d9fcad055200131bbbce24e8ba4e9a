				"Nov'ris",
				"Rae'cter"
			};
		Random rand = new Random();
		String charrie1 = "";
		String charrie2 ="";
		while(true)
		{
			charrie1 = KnightShinies[rand.nextInt(KnightShinies.length)];
			charrie2 = KnightShinies[rand.nextInt(KnightShinies.length)];
			System.out.println("Write a story between " + charrie1 + " and " + charrie2);
			try
            {
	            System.in.read();
	            System.in.read();
            } catch (IOException e)
            {
